<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.gestordecontactos.ui.ContactFormController" fx:resources="com/gestordecontactos/i18n/Messages">
    <center>
        <GridPane hgap="10" vgap="10" padding="10">
            <Label text="%name" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="%email" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Label text="%phone" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <Label text="%birthday" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <DatePicker fx:id="birthdayPicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" padding="10">
            <Button text="%save" onAction="#onSave" />
            <Button text="%cancel" onAction="#onCancel" />
        </HBox>
    </bottom>
</BorderPane>
